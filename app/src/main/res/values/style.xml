    <style name="CustomChipChoiceStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">

        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="CustomChipChoiceStyleTealWhite" parent="@style/Widget.MaterialComponents.Chip.Choice">

        <item name="chipBackgroundColor">@color/chip_teal_white</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>


    <style name="custom_rating_bar">
        <item name="android:scaleX">.5</item>
        <item name="android:scaleY">.5</item>
        <item name="android:transformPivotY">15dp</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:max">5</item>
        <item name="android:numStars">5</item>
        <item name="android:thumb">@null</item>

    </style>

    <style name="EnabledBtnTicketDownload">
        <item name="icon">@drawable/icons8_ticket_24</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="DisableBtnTicketDownload" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/gray</item>
    </style>

    <style name="row_item_address_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AddressFragment_rcv_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tvmargin1">
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="textlayout_edit_address_fragment">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">#FFF</item>
        <item name="boxBackgroundColor">#FFF</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="StyleOTPEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/big_black_dot</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="ReturnItem_param_textLabel">
        <item name="android:padding">15dp</item>
        <item name="android:layout_column">0</item>
        <item name="android:background">@drawable/shape_table_cell</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ReturnItem_param_text">
        <item name="android:padding">15dp</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_table_cell</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ShapeAppearance.Image.PILL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="custom_dropdown_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">#FFF</item>
        <item name="boxBackgroundColor">#FFF</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:layout_margin">5dp</item>
        <item name="endIconDrawable">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="endIconTint">@color/teal_500</item>
    </style>
    <style name="custom_dropdown_layout_Ticket" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">#FFF</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="endIconDrawable">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="endIconTint">@color/teal_500</item>
    </style>

    <style name="CheckboxStyle" >
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="fragmentOrderDetails_paramLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="fragmentOrderDetails_paramTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="fragmentOrderDetails_paramText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="order_card_corner" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_top_corners</item>
    </style>

    <style name="Rating_quantity_progressbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackThickness">10dp</item>
        <item name="trackColor">@color/gray_FEFEFE</item>
        <item name="indicatorColor">@color/Brown</item>
        <item name="trackCornerRadius">360dp</item>
        <item name="android:max">50</item>
    </style>
</resources>